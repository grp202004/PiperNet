{
    "name": "pipernet",
    "version": "1.1.0",
    "discription": "A 3D Data Visualization Software",
    "private": true,
    "main": "main.js",
    "homepage": "./",
    "dependencies": {
        "@blueprintjs/core": "^3.45.0",
        "@blueprintjs/popover2": "^0.10.0",
        "@blueprintjs/select": "^3.16.4",
        "@blueprintjs/table": "3.5.0",
        "chaser": "^0.4.3",
        "classnames": "^2.3.1",
        "copy-anything": "^2.0.1",
        "csv-parse": "^4.14.2",
        "d3-polygon": "^2.0.0",
        "graphology": "^0.19.3",
        "graphology-gexf": "^0.7.5",
        "graphology-types": "^0.19.2",
        "lodash": "^4.17.21",
        "mobx": "^6.0.4",
        "mobx-react": "^7.0.5",
        "randomcolor": "^0.6.2",
        "react": "^17.0.2",
        "react-canvas-draw": "^1.1.1",
        "react-color": "^2.19.3",
        "react-csv": "^2.0.3",
        "react-dom": "^17.0.2",
        "react-force-graph-3d": "^1.21.0",
        "react-scripts": "^4.0.2",
        "three": "^0.127.0",
        "three-spritetext": "^1.6.1",
        "typescript": "^4.2.3",
        "web-vitals": "^1.1.1",
        "xml-js": "^1.6.11"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron-start": "electron .",
        "docs": "typedoc --exclude '**/*+test.ts' src/components src/state",
        "pack-win": "electron-builder --win --x64",
        "pack-mac": "electron-builder --mac"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/classnames": "^2.2.11",
        "@types/d3-polygon": "^2.0.0",
        "@types/jest": "^26.0.20",
        "@types/lodash": "^4.14.170",
        "@types/pluralize": "0.0.29",
        "@types/randomcolor": "^0.5.5",
        "@types/react": "^17.0.3",
        "@types/react-canvas-draw": "^1.1.0",
        "@types/react-color": "^3.0.4",
        "@types/react-csv": "^1.1.1",
        "@types/react-dom": "^17.0.2",
        "@types/three": "^0.126.2",
        "electron": "^11.3.0",
        "electron-builder": "^22.10.5",
        "electron-packager": "^15.2.0",
        "prettier": "2.2.1",
        "typedoc": "^0.20.32"
    },
    "prettier": {
        "tabWidth": 4
    },
    "build": {
        "extends": null,
        "productName": "PiperNet",
        "appId": "PiperNet_Setup",
        "asar": true,
        "directories": {
            "buildResources": "public",
            "output": "dist"
        },
        "linux": {
            "icon": "public/icon.ico"
        },
        "win": {
            "icon": "public/icon.ico",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "shortcutName": "PiperNet",
            "installerLanguages": [
                "en_US"
            ]
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "public/icon.icns"
        },
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 190,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 190,
                    "type": "file"
                }
            ],
            "iconSize": 128
        }
    },
    "jest": {
        "transform": {
            "^.+\\.[t|j]sx?$": "babel-jest"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!@shotgunjed)/"
        ]
    }
}
